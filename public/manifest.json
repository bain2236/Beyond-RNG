{
  "manifest_version": 3,
  "name": "Beyond RNG",
  "version": "0.1.0",
  "description": "Random Roller for DNDBeyond",
  "icons": {
    "128": "icons/RNG-1-128.png"
  },
  "permissions": [
		"*://*.dndbeyond.com/*"
	],
  "content_scripts": [
    {
      "matches": [
				"https://www.dndbeyond.com/spells*"      
			],
      "js": ["contentScript.js"],
      "css": ["contentScript.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "icons/RNG-1-128.png"],
      "matches": ["https://www.dndbeyond.com/*"]
    }
  ]
}